<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mitexto"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="253dp"
        android:layout_marginTop="96dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.196" />

    <Button
        android:id="@+id/botonRojo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@color/colorRojo"
        android:text="@string/rojo"
        app:layout_constraintBaseline_toBaselineOf="@+id/botonVerde"
        app:layout_constraintEnd_toStartOf="@+id/botonVerde"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botonVerde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="61dp"
        android:background="@color/colorVerde"
        android:text="@string/verde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/botonRojo"
        app:layout_constraintTop_toBottomOf="@+id/mitexto" />

    <Button
        android:id="@+id/botonAmarillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:background="@color/colorAmarillo"
        android:text="@string/amarillo"
        app:layout_constraintBaseline_toBaselineOf="@+id/botonAzul"
        app:layout_constraintEnd_toStartOf="@+id/botonAzul"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botonAzul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="55dp"
        android:background="@color/colorAzul"
        android:text="@string/azul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/botonAmarillo"
        app:layout_constraintTop_toBottomOf="@+id/botonVerde" />

    <Button
        android:id="@+id/botonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="121dp"
        android:text="@string/boton_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mitexto"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>